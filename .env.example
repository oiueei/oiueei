# Django Secret Key - Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=generate-with-python-secrets-module

# Debug mode (set to False in production)
DJANGO_DEBUG=True

# Allowed hosts (comma-separated)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database URL (for production with PostgreSQL)
# DATABASE_URL=postgres://user:password@host:port/dbname

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CSRF trusted origins (comma-separated)
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Magic link base URL
MAGIC_LINK_BASE_URL=http://localhost:3000/magic-link

# Cloudinary settings
CLOUDINARY_CLOUD_NAME=oiueei

# Email settings (for production)
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your-sendgrid-api-key
# DEFAULT_FROM_EMAIL=noreply@oiueei.com
